<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textColor="#000000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:background="@drawable/background_with_shadow">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matrix"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginBottom="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.buaa.jj.matrixcalculator.MyGridView
                    android:id="@+id/matrix_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/matrix_background"/>

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/det"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/dim2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:background="@drawable/background_with_shadow">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inverse Matrix"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginBottom="3dp"/>

            <com.buaa.jj.matrixcalculator.MyGridView
                android:id="@+id/inverse_matrix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/matrix_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:background="@drawable/background_with_shadow">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cofactor Matrix"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginBottom="3dp"/>

            <com.buaa.jj.matrixcalculator.MyGridView
                android:id="@+id/cafactor_matrix_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/matrix_background"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>